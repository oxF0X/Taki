<Page x:Class="TakiClient.Views.JoinRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TakiClient.Views"
      xmlns:viewModel="clr-namespace:TakiClient.ViewsModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JoinRoom">

    <!--<Page.DataContext>
        <viewModel:JoinRoomViewModel/>
    </Page.DataContext>-->



    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Rooms}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                            <StackPanel>
                                <TextBlock Text="{Binding name}" FontSize="16" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="ID: " FontWeight="Bold" />
                                    <TextBlock Text="{Binding id}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Max Players: " FontWeight="Bold" />
                                    <TextBlock Text="{Binding maxPlayers}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Time per Play: " FontWeight="Bold" />
                                    <TextBlock Text="{Binding timePerPlay}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Is Active: " FontWeight="Bold" />
                                    <TextBlock Text="{Binding isActive}" />
                                </StackPanel>
                                <Button Content="Join" Margin="0,10" Padding="10" 
                                    Style="{StaticResource LoginButtonStyle}"
                            Command="{Binding DataContext.JoinRoomCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding id}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
