<Page x:Class="TakiClient.Views.JoinRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TakiClient.Views"
      xmlns:viewModel="clr-namespace:TakiClient.ViewsModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JoinRoom">

    <Page.DataContext>
        <viewModel:JoinRoomViewModel/>
    </Page.DataContext>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Rooms}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                            <StackPanel>
                                <TextBlock Text="{Binding name}" FontSize="16" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="ID: " FontWeight="Bold" />
                                    <TextBlock Text="{Binding id}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Max Players: " FontWeight="Bold" />
                                    <TextBlock Text="{Binding maxPlayers}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Time per Play: " FontWeight="Bold" />
                                    <TextBlock Text="{Binding timePerPlay}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="Is Active: " FontWeight="Bold" />
                                    <TextBlock Text="{Binding isActive}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


        </ScrollViewer>

        <TextBox x:Name="txtUser" 
                             Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="14"
                             FontWeight="Medium" 
                             FontFamily="Montserrat"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,2"
                             Height="28" 
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0">
            <TextBox.Background>
                <ImageBrush ImageSource="/Images/user-icon.png" Stretch="None" AlignmentX="Left"/>
            </TextBox.Background>
        </TextBox>
        <Button x:Name="btnLogin" 
                            Command="{Binding JoinRoomCommand}"
                            BorderThickness="0"
                            Content="JOIN ROOM"
                            Foreground="White"
                            FontSize="12" 
                            FontFamily="Montserrat" 
                            Cursor="Hand" 
                            Margin="0,-30,0,0"
                            Style="{StaticResource LoginButtonStyle}"/>
    </Grid>
</Page>
